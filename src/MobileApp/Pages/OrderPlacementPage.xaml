<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MineralsTradingMobileApp.Pages.OrderPlacementPage"
             Title="Place Order">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Page Header -->
            <Label 
                Text="Place Mineral Order"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
            
            <Label 
                Text="Browse available minerals and place your buy order"
                FontSize="16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,10" />

            <!-- Available Minerals Section -->
            <Frame Padding="15" BackgroundColor="{StaticResource Primary}" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label 
                        Text="ðŸ“‹ Available Minerals"
                        FontSize="20"
                        FontAttributes="Bold" />
                    
                    <Label 
                        x:Name="LoadingLabel"
                        Text="Loading available minerals..."
                        FontSize="14"
                        IsVisible="True" />
                    
                    <!-- Minerals List -->
                    <CollectionView 
                        x:Name="MineralsCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnMineralSelected"
                        IsVisible="False">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" Margin="0,5" BackgroundColor="{StaticResource Secondary}" HasShadow="True">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        <Label 
                                            Grid.Row="0" 
                                            Grid.Column="0"
                                            Text="{Binding SellerCompanyName}"
                                            FontSize="18"
                                            FontAttributes="Bold" />
                                        
                                        <Label 
                                            Grid.Row="0" 
                                            Grid.Column="1"
                                            Text="{Binding MetalType}"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            TextColor="{StaticResource Tertiary}" />
                                        
                                        <Label 
                                            Grid.Row="1" 
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            FontSize="14">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Quality: " FontAttributes="Bold" />
                                                    <Span Text="{Binding QualityGrade}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        
                                        <Label 
                                            Grid.Row="2" 
                                            Grid.Column="0"
                                            FontSize="14">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Available: " FontAttributes="Bold" />
                                                    <Span Text="{Binding QuantityAvailable}" />
                                                    <Span Text=" MT" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        
                                        <Label 
                                            Grid.Row="2" 
                                            Grid.Column="1"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            TextColor="{StaticResource Tertiary}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="$" />
                                                    <Span Text="{Binding PricePerTon, StringFormat='{0:N2}'}" />
                                                    <Span Text="/MT" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        
                                        <Label 
                                            Grid.Row="3" 
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Text="{Binding Notes}"
                                            FontSize="12"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="2"
                                            Margin="0,5,0,0" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Order Details Section -->
            <Frame 
                x:Name="OrderDetailsFrame"
                Padding="15" 
                BackgroundColor="{StaticResource Primary}" 
                HasShadow="True"
                IsVisible="False">
                <VerticalStackLayout Spacing="15">
                    <Label 
                        Text="ðŸ›’ Order Details"
                        FontSize="20"
                        FontAttributes="Bold" />
                    
                    <!-- Selected Mineral Info -->
                    <Label 
                        x:Name="SelectedMineralLabel"
                        FontSize="16"
                        FontAttributes="Bold" />
                    
                    <Label 
                        x:Name="SelectedPriceLabel"
                        FontSize="14" />
                    
                    <!-- Quantity Input -->
                    <Label 
                        Text="Order Quantity (Metric Tons)"
                        FontSize="14"
                        FontAttributes="Bold" />
                    
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                        <Entry 
                            x:Name="QuantityEntry"
                            Grid.Column="0"
                            Placeholder="Enter quantity"
                            Keyboard="Numeric"
                            TextChanged="OnQuantityChanged" />
                        
                        <Button 
                            Grid.Column="1"
                            Text="-"
                            WidthRequest="40"
                            Clicked="OnDecreaseQuantity"
                            Margin="5,0,0,0" />
                        
                        <Button 
                            Grid.Column="2"
                            Text="+"
                            WidthRequest="40"
                            Clicked="OnIncreaseQuantity"
                            Margin="5,0,0,0" />
                    </Grid>
                    
                    <Label 
                        x:Name="MaxQuantityLabel"
                        FontSize="12"
                        TextColor="Gray" />
                    
                    <!-- Buyer Information -->
                    <Label 
                        Text="Buyer Company Name"
                        FontSize="14"
                        FontAttributes="Bold"
                        Margin="0,10,0,0" />
                    
                    <Entry 
                        x:Name="BuyerNameEntry"
                        Placeholder="Enter your company name" />
                    
                    <!-- Delivery Date -->
                    <Label 
                        Text="Preferred Delivery Date"
                        FontSize="14"
                        FontAttributes="Bold"
                        Margin="0,10,0,0" />
                    
                    <DatePicker 
                        x:Name="DeliveryDatePicker"
                        MinimumDate="{x:Static x:DateTime.Now}"
                        Date="{x:Static x:DateTime.Now}" />
                    
                    <!-- Order Notes -->
                    <Label 
                        Text="Order Notes (Optional)"
                        FontSize="14"
                        FontAttributes="Bold"
                        Margin="0,10,0,0" />
                    
                    <Editor 
                        x:Name="NotesEditor"
                        Placeholder="Add any special instructions or notes"
                        HeightRequest="80" />
                    
                    <!-- Total Calculation -->
                    <Frame Padding="15" BackgroundColor="{StaticResource Secondary}" HasShadow="False" Margin="0,10,0,0">
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Order Summary"
                                FontSize="16"
                                FontAttributes="Bold" />
                            
                            <Label 
                                x:Name="TotalValueLabel"
                                FontSize="20"
                                FontAttributes="Bold"
                                TextColor="{StaticResource Tertiary}" />
                        </VerticalStackLayout>
                    </Frame>
                    
                    <!-- Action Buttons -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                        <Button 
                            Grid.Column="0"
                            Text="Clear"
                            Clicked="OnClearOrder"
                            BackgroundColor="Gray" />
                        
                        <Button 
                            Grid.Column="1"
                            Text="Place Order"
                            Clicked="OnPlaceOrder"
                            BackgroundColor="{StaticResource Tertiary}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Instructions -->
            <Frame Padding="15" BackgroundColor="{StaticResource Secondary}" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label 
                        Text="â„¹ï¸ How to Place an Order"
                        FontSize="16"
                        FontAttributes="Bold" />
                    <Label Text="1. Select a mineral from the available listings above" FontSize="14" />
                    <Label Text="2. Enter the quantity you wish to purchase" FontSize="14" />
                    <Label Text="3. Provide your company details" FontSize="14" />
                    <Label Text="4. Select your preferred delivery date" FontSize="14" />
                    <Label Text="5. Review the total cost and place your order" FontSize="14" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
