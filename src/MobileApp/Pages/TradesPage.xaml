<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MineralsTradingMobileApp.Pages.TradesPage"
             Title="Trades">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label 
                Text="Trade Management"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
            
            <Frame Padding="20" BackgroundColor="{StaticResource Primary}" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="⇄" FontSize="48" HorizontalOptions="Center" />
                    <Label 
                        Text="Trade Execution &amp; Monitoring"
                        FontSize="20"
                        FontAttributes="Bold"
                        HorizontalOptions="Center" />
                    <Label 
                        Text="Features:"
                        FontSize="16"
                        FontAttributes="Bold"
                        Margin="0,10,0,0" />
                    <Label Text="• Browse available minerals" FontSize="14" />
                    <Label Text="• View mineral specifications" FontSize="14" />
                    <Label Text="• Execute buy orders" FontSize="14" />
                    <Label Text="• Track trade history" FontSize="14" />
                    <Label Text="• Monitor trade status" FontSize="14" />
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="20" BackgroundColor="{StaticResource Secondary}" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label 
                        Text="Native MAUI Implementation"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalOptions="Center" />
                    <Label 
                        Text="This page has been converted from Blazor Razor to native MAUI XAML. Full trade management functionality would be implemented here with native controls."
                        FontSize="14"
                        HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Frame>

            <Button 
                Text="View Active Trades"
                FontSize="16"
                Padding="15"
                BackgroundColor="{StaticResource Tertiary}" />
            
            <Button 
                Text="Execute New Trade"
                FontSize="16"
                Padding="15"
                BackgroundColor="{StaticResource Tertiary}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
