<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiningTradingClientApp.Views.MineralDetailPage"
             Title="Mineral Details">
    
    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">
            
            <!-- Header Image -->
            <Image x:Name="MineralImage"
                   Source="https://picsum.photos/400/300"
                   Aspect="AspectFill"
                   HeightRequest="250" />

            <VerticalStackLayout Padding="20" Spacing="20">
                
                <!-- Name and Verification -->
                <HorizontalStackLayout Spacing="12">
                    <Label x:Name="MineralName" 
                           Text="Mineral Name"
                           Style="{StaticResource HeadlineStyle}"
                           VerticalOptions="Center" />
                    <Label x:Name="VerifiedBadge"
                           Text="âœ“ Verified" 
                           IsVisible="False"
                           TextColor="{StaticResource RobinhoodGreen}"
                           FontSize="16"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Price Section -->
                <Frame Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Current Price" 
                               Style="{StaticResource CaptionStyle}" />
                        <Label x:Name="PriceLabel" 
                               Text="$0.00"
                               Style="{StaticResource PriceStyle}" />
                        <Label Text="per kilogram" 
                               Style="{StaticResource SmallTextStyle}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Description -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Description" 
                           Style="{StaticResource SubtitleStyle}" />
                    <Label x:Name="DescriptionLabel" 
                           Text="Loading description..."
                           Style="{StaticResource BodyStyle}"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>

                <!-- Details Card -->
                <Frame Style="{StaticResource CardStyle}">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                          ColumnDefinitions="*,*"
                          RowSpacing="16"
                          ColumnSpacing="12">
                        
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Weight" 
                               Style="{StaticResource CaptionStyle}" />
                        <Label Grid.Row="0" Grid.Column="1"
                               x:Name="WeightLabel"
                               Text="0 kg"
                               Style="{StaticResource BodyStyle}"
                               HorizontalTextAlignment="End" />

                        <BoxView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                Style="{StaticResource DividerStyle}" />

                        <Label Grid.Row="2" Grid.Column="0"
                               Text="Origin" 
                               Style="{StaticResource CaptionStyle}" />
                        <Label Grid.Row="2" Grid.Column="1"
                               x:Name="OriginLabel"
                               Text="Unknown"
                               Style="{StaticResource BodyStyle}"
                               HorizontalTextAlignment="End" />

                        <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                Style="{StaticResource DividerStyle}" />

                        <Label Grid.Row="4" Grid.Column="0"
                               Text="Seller" 
                               Style="{StaticResource CaptionStyle}" />
                        <Label Grid.Row="4" Grid.Column="1"
                               x:Name="SellerLabel"
                               Text="Unknown"
                               Style="{StaticResource BodyStyle}"
                               HorizontalTextAlignment="End"
                               LineBreakMode="TailTruncation" />
                    </Grid>
                </Frame>

                <!-- Listed Date -->
                <HorizontalStackLayout Spacing="8">
                    <Label Text="Listed on:" 
                           Style="{StaticResource SmallTextStyle}" />
                    <Label x:Name="DateListedLabel" 
                           Text="Unknown"
                           Style="{StaticResource SmallTextStyle}"
                           TextColor="{StaticResource TextSecondary}" />
                </HorizontalStackLayout>

                <!-- Buy Button -->
                <Button x:Name="BuyButton"
                       Text="Buy Now"
                       Style="{StaticResource BuyButtonStyle}"
                       Clicked="OnBuyClicked"
                       Margin="0,10,0,20" />

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
