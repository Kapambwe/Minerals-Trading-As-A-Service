<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiningTradingMobileApp.Views.BuyerPages"
             x:Class="MiningTradingMobileApp.Views.BuyerPages.WarrantStatus"
             Title="Warrant Status">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Enter Warrant ID:" FontSize="Medium" />
        <Entry x:Name="WarrantIdEntry" Placeholder="e.g., W123" />
        <Button Text="Load Warrant Details" Clicked="OnLoadWarrantDetailsClicked" />

        <local:WarrantDetails x:Name="WarrantDetailsControl" />
    </VerticalStackLayout>
</ContentPage>