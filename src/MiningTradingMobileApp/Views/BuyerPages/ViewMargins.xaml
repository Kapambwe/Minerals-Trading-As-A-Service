<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiningTradingMobileApp.Views.BuyerPages"
             x:Class="MiningTradingMobileApp.Views.BuyerPages.ViewMargins"
             Title="View Margins">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Enter Trade ID:" FontSize="Medium" />
        <Entry x:Name="TradeIdEntry" Placeholder="e.g., 123" Keyboard="Numeric" />
        <Button Text="Load Margin Details" Clicked="OnLoadMarginDetailsClicked" />

        <local:MarginDisplay x:Name="MarginDisplayControl" />
    </VerticalStackLayout>
</ContentPage>