<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MiningTradingMobileApp.ViewModels"
             x:Class="MiningTradingMobileApp.Views.BuyerPages.WarrantDetails"
             x:DataType="viewmodels:WarrantDetailsViewModel">
    <ContentView.BindingContext>
        <viewmodels:WarrantDetailsViewModel />
    </ContentView.BindingContext>
    <VerticalStackLayout>
        <ActivityIndicator IsRunning="{Binding Warrant, Converter={StaticResource NullToBoolConverter}}" IsVisible="{Binding Warrant, Converter={StaticResource NullToBoolConverter}}" />
        <Frame IsVisible="{Binding Warrant, Converter={StaticResource NotNullToBoolConverter}}" CornerRadius="10" Padding="15" Margin="10" HasShadow="True">
            <VerticalStackLayout Spacing="5">
                <Label Text="{Binding Warrant.WarrantNumber, StringFormat='Warrant #{0}'}" FontSize="Large" FontAttributes="Bold" />
                <Label Text="{Binding Warrant.MetalType, StringFormat='{0} Warrant'}" FontSize="Medium" Margin="0,5,0,0" />
                <Label Text="{Binding Warrant.TradeId, StringFormat='Trade ID: {0}'}" />
                <Label Text="{Binding Warrant.WarehouseName, StringFormat='Warehouse: {0}'}" />
                <Label Text="{Binding Warrant.Quantity, StringFormat='Quantity: {0} tons'}" />
                <Label Text="{Binding Warrant.CurrentOwner, StringFormat='Current Owner: {0}'}" />
                <Label Text="{Binding Warrant.PreviousOwner, StringFormat='Previous Owner: {0}'}" />
                <Label Text="{Binding Warrant.IssueDate, StringFormat='Issue Date: {0:d}'}" />
                <Label Text="{Binding Warrant.TransferDate, StringFormat='Transfer Date: {0:d}'}" />
                <Label Text="{Binding Warrant.QualityGrade, StringFormat='Quality Grade: {0}'}" />
                <Label Text="{Binding Warrant.LotNumber, StringFormat='Lot Number: {0}'}" />
                <Label Text="{Binding Warrant.Status, StringFormat='Status: {0}'}" />
                <Label Text="{Binding Warrant.IsActive, StringFormat='Active: {0}'}" />
                <Label Text="{Binding Warrant.Notes, StringFormat='Notes: {0}'}" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>